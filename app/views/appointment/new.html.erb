<h1>Add Assignment</h1>
<%= form_with(model: [@doctor, @assignment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patient.collect { |u| [u.full_name, u.id] } %>
  <br />
  <%= f.label :role %>
  <%= f.select :role, ['job', 'doctor', 'patient'] %>
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>